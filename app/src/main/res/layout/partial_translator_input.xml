<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_external_input"
    android:clipChildren="false"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border_internal_input"
        android:padding="0dp">

        <EditText
            android:id="@+id/edit_input"
            style="@style/YandexTranslatorTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button_sound"
            android:gravity="top|start"
            android:inputType="text"
            android:minHeight="100dp" />

        <ImageButton
            android:id="@+id/button_sound"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_keyboard_voice" />

        <ImageButton
            android:id="@+id/button_play"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/button_sound"
            android:src="@drawable/ic_play_sound" />

        <ImageButton
            android:id="@+id/button_erase"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_input"
            android:src="@drawable/ic_erase" />
    </RelativeLayout>

</RelativeLayout>