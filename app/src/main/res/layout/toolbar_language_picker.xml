<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_language_picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMain"
    android:maxHeight="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    android:orientation="vertical"
    android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <ImageButton
        android:id="@+id/button_back_language_picker"
        android:layout_width="@dimen/image_icon_in_toolbar_size"
        android:layout_height="@dimen/image_icon_in_toolbar_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_toolbar_horizontal"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back" />

    <TextView
        android:textSize="@dimen/toolbar_text_size"
        android:textColor="@color/colorElementsInToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_bar_pick_language"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>