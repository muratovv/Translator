<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yandex.muratov.translator.MainActivity">

    <LinearLayout
        android:id="@+id/layout_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bar_navigation"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/bar_navigation"
        android:background="@drawable/border_separator" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bar_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        app:itemIconTint="@drawable/item_nav_color_state"
        app:itemTextColor="@drawable/item_nav_color_state"
        app:menu="@menu/bottom_navigation_main" />

</RelativeLayout>
