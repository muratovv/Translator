<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <yandex.muratov.translator.ui.translator.TranslatorToolbar
        android:id="@+id/toolbar_translator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <yandex.muratov.translator.ui.translator.TranslatorInputView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <yandex.muratov.translator.ui.translator.TranslatorOutputView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>